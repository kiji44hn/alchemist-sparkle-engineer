{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vite/client", "vue", "vue-router"],
    "baseUrl": ".", // プロジェクトルートを基準
    "paths": {
        "@components/*": ["src/components/*"],
        "@assets/*": ["src/assets/*"]
    }
  },
  "include": ["src/**/*", "src/**/*.vue"],
  "exclude": ["node_modules"]
}